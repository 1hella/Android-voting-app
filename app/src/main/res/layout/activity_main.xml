<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.votingapp.votingapp.activity.MainActivity">

    <FrameLayout
        android:id="@+id/poo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1.5">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.bigscreen.iconictabbar.view.IconicTabBar
            android:id="@+id/tab_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barBackground="#FFFFFF"
            app:tabDefaultColor="#CC4B4B4B"
            app:tabFromMenu="@menu/drawer_view"
            app:tabSelectedColor="#3F51B5"
            android:layout_gravity="bottom"/>
    </FrameLayout>

</android.support.constraint.ConstraintLayout>
